    <style>
        .doctor-avatar {
        overflow: hidden; /* Ngăn hình ảnh tràn ra ngoài thẻ cha khi phóng to */
        }

        .doctor-avatar .img {
        transition: transform .3s;
         /* Tạo hiệu ứng chuyển đổi mượt mà */
        }

        .doctor-avatar:hover .img {
        border-radius: 0 !important;
        /* margin-top: 100px; */
        object-fit: cover;
        transform: scale(1.8); /* Phóng to hình ảnh 1.5 lần khi di chuột vào */
        top:25px;
        position: relative;
        }

        .doctor-avatar:hover .hide{
            opacity: 0;
           
            /* display: none; */
        }

        .changeColor{
            transition: background-color .8s !important;
        }
        .changeColor:hover {
            background-color: rgb(63, 172, 255) !important;
        }
    </style>
